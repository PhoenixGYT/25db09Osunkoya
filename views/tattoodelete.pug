extends layout

block content
  h1= title
  - let tattoo_id = toShow?._id
  - let customer = toShow?.customer
  - let duration = toShow?.duration
  - let cost = toShow?.cost
  - let colored = toShow?.colored
  - let actionid = "/resource/tattoos/" + tattoo_id

  div
    div.row
      div(class='tattooAttr mr-3') Tattoo ID is: #{tattoo_id}
    div.row
      div(class='tattooAttr mr-3') Customer is: #{customer}
    div.row
      div(class='tattooAttr mr-3') Duration is: #{duration}
    div.row
      div(class='tattooAttr mr-3') Cost is: #{cost}
    div.row
      div(class='tattooAttr mr-3') Colored? #{colored}
    button(type=button, class="btn btn-danger m-2", onclick="deleteOnid()") Delete
    button(type=button, class="btn btn-secondary m-2", onclick="cancel()") Cancel

    script.
      let actionid = "#{actionid}";

      function cancel(){
        window.location.href = '/tattoos'
      }

      function deleteOnid(){
        console.log("starting delete")
        fetch(actionid, {
          method: 'DELETE'
        }).then((resp) => {
          return resp.json();
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/tattoos'
        }).catch((error) => {
          alert("Delete failed " + error)
        });
      }
