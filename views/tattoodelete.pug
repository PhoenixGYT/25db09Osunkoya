extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let tattoo_id = toShow._id
    - let customer = toShow.customer
    - let duration = toShow.duration
    - let cost = toShow.cost
    - let colored = toShow.colored === "on"
    - let actionid = "/resource/tattoo/" + tattoo_id

  div
    div.row
      div(class='tattooAttr mr-3') Tattoo ID is:
      div #{tattoo_id}
    div.row
      div(class='tattooAttr mr-3') Customer is:
      div #{customer}
    div.row
      div(class='tattooAttr mr-3') Duration is:
      div #{duration}
    div.row
      div(class='tattooAttr mr-3') Cost is:
      div #{cost}
    div.row
      div(class='tattooAttr mr-3') Colored?
      div #{colored}

    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      let actionid = "#{actionid}"

      function cancel() {
        window.location.href='/tattoos'
      }

      function deleteOnid() {
        console.log("starting delete")
        fetch(actionid, {
          method: 'DELETE'
        }).then((resp) => {
          return resp.json();
        }).then((body) => {
          alert("Delete succeeded")
          window.location.href='/tattoos'
        }).catch((error) => {
          alert("Delete failed " + error)
        });
      }
