extends layout
block content
    h1= title
        - let tattoo_id = toShow._id
        - let customer = toShow.customer
        - let duration = toShow.duration
        - let cost = toShow.cost
        - let colored = toShow.colored === "on"
        div
            div.row
                div(class='tattooAttr mr-3') Tattoo ID is:
                div #{tattoo_id}
            div.row
                div(class='tattooAttr mr-3') Customer is:
                div #{customer}
            div.row
                div(class='tattooAttr mr-3') Duration is:
                div #{duration}
            div.row
                div(class='tattooAttr mr-3') Cost is:
                div #{cost}
            div.row
                div(class='tattooAttr mr-3') Colored? 
                div #{colored}